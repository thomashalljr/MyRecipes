<%= render 'shared/page_title', title: "Forgot your password?" %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal", role: "form" }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="form-group field">
      <div class="control-label col-md-2">
        <%= f.label :email %>
      </div>
      <div class="col-md-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group actions">
      <div class="col-md-offset-2 col-md-10">
        <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-lg btn-xlarge" %>
      </div>
    </div>
  </div>

<% end %>

<div class="row">
  <div class="col-md-offset-2 col-md-10">
    <%= render "devise/shared/links" %>
  </div>
</div>
