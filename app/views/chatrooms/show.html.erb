<%= render "shared/page_title_without_hr", title: "ChefChat" %>

<div class="row chat-container">
  <div class="offset-md-2 col-md-8 center-block">
    <div class="messages" id="messages">
      <%= render @messages %>
    </div>
    <hr />
    <div class="message-container">
      <%= form_for(@message, remote: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <%= f.text_area :content, class: "form-control", data: { behavior: "message-entered" }, placeholder: "Say something!" %>
        <%= f.submit "Send", class: "btn btn-custom-signin" %>
      <% end %>
    </div>
  </div>
</div>
