<%= render "shared/page_title_without_hr", title: "Available ingredients" %>

<% @ingredients.order(name: :asc).each do |ing| %>

  <div class="row mb-4">
    <div class="col-md-4 offset-md-4">
      <div class="card">
        <div class="card-body center">
          <h4 class="card-title"><%= link_to ing.name.try(:capitalize), ingredient_path(ing) %></h4>
          <h6 class="card-subtitle"><small><%= pluralize(ing.recipes.count, "recipe") if ing.recipes %></small></h6>

          <% if chef_signed_in? && current_chef.admin? %>
            <p class="card-text">
              <%= link_to "Edit this ingredient", edit_ingredient_path(ing), class: "btn btn-xs btn-warning mt-3" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>

<%= will_paginate list_classes: %w(pagination justify-content-center mt-5) %>
