<%= render "shared/page_title_without_hr", title: "showing all chefs" %>

<% @chefs.order(chefname: :asc).each do |chef| %>

  <div class="row mb-4">
    <div class="col-md-4 offset-md-4">
      <div class="card">
        <div class="card-body center">
          <p class="card-text"><%= link_to gravatar_for(chef), chef_path(chef) %></p>
          <h4 class="card-title"><%= link_to chef.chefname.capitalize, chef_path(chef) %></h4>
          <h6 class="card-subtitle"><small><%= pluralize(chef.recipes.count, "recipe") if chef.recipes %></small></h6>

          <% if chef_signed_in? && current_chef.admin? && !chef.admin? %>
            <p class="card-text">
              <%= link_to "Delete this chef", chef_path(chef), method: :delete, class: "btn btn-xs btn-danger mt-3",
                  data: { confirm: "Are you sure you want to delete the chef and all associated recipes?" } %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= will_paginate list_classes: %w(pagination justify-content-center mt-5) %>
