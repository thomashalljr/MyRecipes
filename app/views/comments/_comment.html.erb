<div class="row mb-4">

  <div class="col-md-2">
    <section class="chef-info center">
      <%= gravatar_for(comment.chef, size: 60) %>
    </section>
  </div>

  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <p class="card-text"><%= comment.description %></p>
        <p class="card-subtitle">
          <small><%= time_ago_in_words(comment.created_at) %> ago by
          <%= comment.chef.chefname %></small>
        </p>
      </div>
    </div>
  </div>

</div>
